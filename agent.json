{
  "schema_version": "1.0.0",
  "name": "Demo Hotel Booking API",
  "description": "Hotel search capabilities exposed via IntentQL",
  "intents": [
    {
      "name": "search_hotels",
      "description": "Search for hotels between dates",
      "parameters": {
        "type": "object",
        "properties": {
          "origin": {
            "type": "string",
            "description": "Departure city"
          },
          "destination": {
            "type": "string",
            "description": "Hotel city"
          },
          "checkin": {
            "type": "string",
            "format": "date",
            "description": "Check-in date (YYYY-MM-DD)"
          },
          "checkout": {
            "type": "string",
            "format": "date",
            "description": "Check-out date (YYYY-MM-DD)"
          }
        },
        "required": ["destination", "checkin", "checkout"]
      },
      "response_example": {
        "hotels": [
          {
            "name": "Hotel Lumi√®re",
            "stars": 5,
            "price_per_night": 245,
            "currency": "GBP",
            "location": "Near Eiffel Tower",
            "amenities": ["WiFi", "Breakfast", "Gym"]
          },
          {
            "name": "Le Marais Inn",
            "stars": 4,
            "price_per_night": 180,
            "currency": "GBP",
            "location": "City Center",
            "amenities": ["WiFi", "Breakfast"]
          },
          {
            "name": "Budget Stay Paris",
            "stars": 3,
            "price_per_night": 95,
            "currency": "GBP",
            "location": "Metro Access",
            "amenities": ["WiFi"]
          }
        ]
      }
    }
  ]
}